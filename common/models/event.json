{
  "name": "event",
  "plural": "events",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "String",
      "id": true
    },
    "title": {
      "type": "String",
      "required": true
    },
    "days": {
      "type": ["day"],
      "required": true
    },
    "definitive": {
      "type": "period",
      "required": false
    },
    "password": {
      "type": "String",
      "required": false
    },
    "creation": {
      "type": "Date",
      "required": true,
      "default": "$now"
    },
    "expiration": {
      "type": "Date",
      "required": false
    },
    "claimToken": {
      "type": "String",
      "required": false
    }
  },
  "relations": {
    "owner": {
      "foreignKey": "ownerId",
      "type": "belongsTo",
      "model": "user"
    },
    "participations": {
      "foreignKey": "eventId",
      "type": "hasMany",
      "model": "participation"
    }
  },
  "hidden": ["password", "claimToken"],
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "exists"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "replaceById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "claim"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "participation_find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "participation_findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "participation_create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "participation_selection_create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "participation_selection_deleteById"
    }
  ],
  "methods": {}
}
